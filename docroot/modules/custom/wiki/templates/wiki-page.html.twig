<section class="wiki-main">

  <div class="wiki-header">
    <div class="wiki-search-form">
      {{ parameters.searchForm }}
    </div>
    {% if parameters.key %}
      <h2>Results for: {{ parameters.key }}</h2>
    {% endif %}
  </div>

  {% for item in parameters.data.result %}
    <div class="content article">
      <div class="wiki-link">
        <a href="{{ parameters.data.base }}{{ item.title }}" target="_blank" >
          {{ item.title }}
        </a>
      </div>
      <div class="wiki-data">
        {{ item.snippet|raw }} ...
      </div>
    </div>
  {% endfor %}

</section>
